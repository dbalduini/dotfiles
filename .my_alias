# Custom commands
alias ls="ls -GFh"
alias ll='ls -l'
alias lt='tree -N -C --prune'

# List Symbolic links
alias sl="find .  -maxdepth 1 -type l -ls | awk '{ print \"\\033[35m\" \$11  \"\033[0m\" \" \"  \$12 \" \" \$13  ;}'"

# Hadoop
alias hstart="/usr/local/Cellar/hadoop/2.7.1/sbin/start-dfs.sh;/usr/local/Cellar/hadoop/2.7.1/sbin/start-yarn.sh"
alias hstop="/usr/local/Cellar/hadoop/2.7.1/sbin/stop-yarn.sh;/usr/local/Cellar/hadoop/2.7.1/sbin/stop-dfs.sh"

# Mac
alias finder-on="defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder"
alias finder-off="defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder"

# Workflow
alias phantome2e='nightwatch --config tests/nightwatch/nightwatch.json --env phantomjs --skiptags remote,extra,compare_envs'
alias compare-layouts='~/Scripts/compareLayouts.sh'
alias compare-loadtime='~/Scripts/compareLoadtime.sh'
